{% extends 'globalTemplate.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block main %}
<div class="container-fluid block-main">
    <div class="mb-5"></div>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">Niepoprawna nazwa użytkownika lub hasło. Spróbuj ponownie.</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Jesteś zalogowany jako {{ app.user.username }}, <a href="{{ path('app_logout') }}">Wyloguj mnie</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
        <div class="container block-form">
        
            <div class="row mb-3">
                <div class="col-2 col-sm-1 form-field form-icon">
                    <i class="bi bi-person-fill"></i>
                </div>
                <div class="col-10 col-sm-11 form-field">
                    <input placeholder="Nazwa użytkownika" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control form-control-icons form-control-lg" autocomplete="username" required autofocus>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2 col-sm-1 form-field form-icon">
                    <i class="bi bi-key-fill"></i>
                </div>
                <div class="col-10 col-sm-11 form-field">
                    <input placeholder="Hasło" type="password" name="password" id="inputPassword" class="form-control form-control-icons form-control-lg" autocomplete="current-password" required>
                </div>
            </div>
            <div class="row mb-3">
                <button class="btn btn-lg form-btn" type="submit">Zaloguj się</button>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
    </form>
    <h4>Nie masz konta? <a href="{{path('register')}}" class="text-link">Zarejestruj się</a></h4>
</div>
{% endblock %}
